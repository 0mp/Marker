<component type="desktop-application">
  <id>com.github.fabiocolacio.marker</id>
  <metadata_license>FSFAP</metadata_license>
  <project_license>GPL-3.0</project_license>
  <name>Marker</name>
  <summary>Powerful markdown editor</summary>

  <description>
    <p>Features:</p>
    <ul>
      <li>View and edit markdown documents</li>
      <li>Covert markdown documents to HTML</li>
      <li>Tex math rendering</li>
      <li>Support for mermaid diagrams</li>
      <li>Support for charter plots</li>
      <li>Syntax highlighting for code blocks</li>
      <li>Integrated sketch editor</li>
      <li>Exports to
        <ul>
          <li>PDF</li>
          <li>RTF</li>
          <li>ODT</li>
          <li>DOCx</li>
          <li>LaTeX</li>
        </ul>
      </li>
      <li>Custom CSS themes</li>
      <li>Custom syntax themes</li>
      <li>Figure captioning and numbering</li>
    </ul>
  </description>

  <launchable type="desktop-id">com.github.fabiocolacio.marker.desktop</launchable>

  <screenshots>
