<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.16"/>
  
  <!-- Image Icons -->
  <object class="GtkImage" id="refresh">
    <property name="icon_name">view-refresh-symbolic</property>
    <property name="icon_size">2</property>
  </object>
  <object class="GtkImage" id="doc-open">
    <property name="icon_name">document-open-symbolic</property>
    <property name="icon_size">2</property>
  </object>
  <object class="GtkImage" id="open-menu">
    <property name="icon_name">open-menu-symbolic</property>
    <property name="icon_size">2</property>
  </object>
  
  <!-- Popover Menu -->
  <object class="GtkPopoverMenu" id="menu_popover">
    <property name="modal">True</property>
    <property name="border-width">6</property>
    <child>
      <object class="GtkBox">
        <property name="visible">True</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkModelButton">
            <property name="visible">True</property>
            <property name="text">Save As...</property>
            <signal name="clicked" handler="save_as_btn_pressed" swapped="no" />
          </object>
        </child>
        <child>
          <object class="GtkModelButton">
            <property name="visible">True</property>
            <property name="text">Export...</property>
            <signal name="clicked" handler="export_btn_pressed" swapped="no" />
          </object>
        </child>
        <child>
          <object class="GtkModelButton">
            <property name="visible">True</property>
            <property name="text">New</property>
            <signal name="clicked" handler="new_btn_pressed" swapped="no" />
          </object>
        </child>
      </object>
    </child>
  </object>
  
  <!-- Header Bar -->
  <object class="GtkHeaderBar" id="header_bar">
    <property name="title">Untitled.md</property>
    <property name="show_close_button">True</property>
    <child>
      <object class="GtkButton">
        <property name="label">Open...</property>
        <signal name="clicked" handler="open_btn_pressed" swapped="no"/>
      </object>
      <packing>
        <property name="pack_type">start</property>
      </packing>
    </child>
    <child>
      <object class="GtkButton">
        <property name="label">Save</property>
        <signal name="clicked" handler="save_btn_pressed" swapped="no"/>
      </object>
      <packing>
        <property name="pack_type">start</property>
      </packing>
    </child>
    <child>
      <object class="GtkToggleButton" id="menu_toggler">
        <property name="image">open-menu</property>
        <signal name="toggled" handler="menu_btn_toggled" swapped="no" />
      </object>
      <packing>
        <property name="pack_type">end</property>
      </packing>
    </child>
    <child>
      <object class="GtkButton">
        <property name="image">refresh</property>
        <signal name="clicked" handler="refresh_btn_pressed" swapped="no"/>
      </object>
      <packing>
        <property name="pack_type">end</property>
      </packing>
    </child>
  </object>
  
  <!-- Editor / Web Preview -->
  <object class="GtkPaned" id="editor">
    <property name="position">400</property>
    <property name="wide-handle">True</property>
    <child>
      <object class="GtkScrolledWindow">
        <child>
          <object class="GtkSourceView" id="source_view">
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkScrolledWindow" id="web_view_scroll">
        <child>
          <object class="WebkitWebView" id="web_view">
          </object>
        </child>
      </object>
    </child>
  </object>
      
</interface>
